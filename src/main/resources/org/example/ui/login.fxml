<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.ui.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: #f4f6f9; -fx-padding: 20;">

    <children>
        <Label text="ðŸ” Login" layoutX="160" layoutY="20"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <Label text="Username:" layoutX="60" layoutY="90"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="85" prefWidth="180"/>

        <Label text="Password:" layoutX="60" layoutY="140"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="135" prefWidth="180"/>

        <Button text="Login" layoutX="150" layoutY="200" prefWidth="100"
                onAction="#handleLogin" style="-fx-background-color: #1976D2; -fx-text-fill: white;"/>

        <Label fx:id="messageLabel" layoutX="60" layoutY="250" style="-fx-text-fill: red;"/>
    </children>

</AnchorPane>
